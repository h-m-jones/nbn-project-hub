{
  "name": "nbn-project-hub",
  "packageManager": "yarn@3.6.1",
  "workspaces": [
    "packages/nbn-js-lib",
    "packages/nbn-react-components",
    "packages/nbn-maps",
    "apps/*"
  ],
  "scripts": {
    "start:demo": "yarn workspace @nbn-project-hub/demo start",
    "build:demo": "yarn build:nbn-react-components && yarn workspace @nbn-project-hub/demo build",
    "build:nbn-react-components": "yarn workspace @nbn-project-hub/nbn-react-components build",
    "storybook:nbn-react-components": "yarn workspace @nbn-project-hub/nbn-react-components storybook",
    "storybook:maps": "yarn workspace @nbn-project-hub/nbn-maps storybook",
    "build:maps": "yarn workspace @nbn-project-hub/nbn-maps build",
    "test": "jest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6",
    "vite-plugin-dts": "^3.3.1"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.0.3"
  }
}
